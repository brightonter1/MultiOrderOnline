<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg_clear"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/register_back"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_regis" />

    <EditText
        android:id="@+id/register_email"
        android:drawableLeft="@drawable/ic_account"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="Email"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:background="@drawable/border_rec"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/register_password"
        android:drawableLeft="@drawable/ic_pwd"
        android:inputType="textPassword"
        android:hint="Password"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_rec"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/register_repassword"
        android:drawableLeft="@drawable/ic_pwd"

        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Confirm Password"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_rec"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="50dp" />


    <TextView
        android:text="@string/question"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/select_radio"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:layout_height="100dp">

        <RadioButton
            android:id="@+id/buyer"
            android:layout_width="200dp"
            android:textSize="15dp"
            android:layout_height="50dp"
            android:text="Customer" />

        <RadioButton
            android:id="@+id/seller"
            android:layout_width="200dp"
            android:textSize="15dp"
            android:layout_height="50dp"
            android:text="Suppiler" />

    </RadioGroup>



    <Button
        android:id="@+id/register_regisBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/borderbold"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

</LinearLayout>
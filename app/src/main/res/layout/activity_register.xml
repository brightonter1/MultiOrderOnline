<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg_clear"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/register_back"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:drawableLeft="@drawable/ic_back"
        android:fontFamily="@font/lamoon_regular" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_regis"
        app:layout_constraintTop_toBottomOf="@+id/register_back"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="64dp"
        android:background="@drawable/border_rec"
        android:drawableLeft="@drawable/ic_account_yellow"
        android:fontFamily="@font/lamoon_regular"
        android:hint=" Email"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_rec"
        android:drawableLeft="@drawable/ic_pwd"
        android:fontFamily="@font/lamoon_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <EditText
        android:id="@+id/register_repassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_rec"
        android:drawableLeft="@drawable/ic_pwd"
        android:fontFamily="@font/lamoon_regular"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/White"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />


    <EditText
        android:id="@+id/register_name_store"
        android:layout_width="251dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_rec"
        android:fontFamily="@font/lamoon_regular"
        android:hint="*Name Store"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/White"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_radio" />

    <RadioGroup
        android:id="@+id/select_radio"
        android:layout_width="251dp"
        android:layout_height="100dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_rec"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_repassword">

        <RadioButton
            android:id="@+id/buyer"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:buttonTint="@color/White"
            android:checked="true"
            android:fontFamily="@font/font_regular"
            android:text="CUSTOMER"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/seller"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:buttonTint="@color/White"
            android:fontFamily="@font/font_regular"
            android:text="SUPPLIER"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

    </RadioGroup>


    <Button
        android:id="@+id/register_regisBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/borderbold"
        android:fontFamily="@font/lamoon_bold"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="@color/yellowLogin"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name_store" />

</android.support.constraint.ConstraintLayout>
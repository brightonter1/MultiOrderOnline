<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/menuitem_img"
            android:layout_width="122dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/login_bg" />

        <TextView
            android:id="@+id/menuitem_name"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/menuitem_img"
            android:layout_marginEnd="11dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/menuitem_des"
            android:layout_width="209dp"
            android:layout_height="68dp"
            android:layout_above="@+id/menuitem_price"
            android:layout_alignStart="@+id/menuitem_name"
            android:layout_marginBottom="-121dp"
            android:text="TextView"
            android:textSize="14dp" />

        <Button
            android:id="@+id/menuitem_price"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="121dp"
            android:text="Button" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
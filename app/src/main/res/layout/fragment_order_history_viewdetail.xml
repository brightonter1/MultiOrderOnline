<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="81dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_default" />

    <TextView
        android:id="@+id/viewdetail_each"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_regular"
        android:text="1 piece"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/viewdetail_price"
        app:layout_constraintTop_toBottomOf="@+id/viewdetail_price" />

    <TextView
        android:id="@+id/viewdetail_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_regular"
        android:text="25 THB"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/viewdetail_name"
        app:layout_constraintTop_toBottomOf="@+id/viewdetail_name" />

    <TextView
        android:id="@+id/viewdetail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_regular"
        android:text="Chicken fire"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
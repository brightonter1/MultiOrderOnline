<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/history_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_default" />

    <TextView
        android:id="@+id/history_item_each"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_regular"
        android:text="1 piece"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/history_item_price"
        app:layout_constraintTop_toBottomOf="@+id/history_item_price" />

    <TextView
        android:id="@+id/history_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_regular"
        android:text="25 THB"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/history_item_name"
        app:layout_constraintTop_toBottomOf="@+id/history_item_name" />

    <TextView
        android:id="@+id/history_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/font_regular"
        android:text="Chicken fire"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toEndOf="@+id/history_item_img"
        app:layout_constraintTop_toTopOf="@+id/history_item_img" />
</android.support.constraint.ConstraintLayout>

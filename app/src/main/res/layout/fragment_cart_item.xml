<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cartitem_menu_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/colorControlActivated" />

    <TextView
        android:id="@+id/cartitem_mune_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Colonel's Fried Chicken"
        app:layout_constraintStart_toEndOf="@+id/cartitem_menu_image"
        app:layout_constraintTop_toTopOf="@+id/cartitem_menu_image" />

    <ImageView
        android:id="@+id/cartitem_menu_price"
        android:layout_width="42dp"
        android:layout_height="13dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/cartitem_menu_image"
        app:layout_constraintStart_toEndOf="@+id/cartitem_menu_image"
        app:srcCompat="@android:color/holo_red_light" />

    <ImageView
        android:id="@+id/cartitem_plus"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/cartitem_menu_image"
        app:layout_constraintStart_toEndOf="@+id/cartitem_menu_price"
        app:srcCompat="@android:color/holo_blue_light" />

    <ImageView
        android:id="@+id/cartitem_minus"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/cartitem_menu_piece"
        app:layout_constraintStart_toEndOf="@+id/cartitem_menu_piece"
        app:srcCompat="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/cartitem_menu_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/cartitem_plus"
        app:layout_constraintStart_toEndOf="@+id/cartitem_plus" />

</android.support.constraint.ConstraintLayout>